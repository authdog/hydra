{
    "compilerOptions": {
      "outDir": "dist",
      "lib": ["es6", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "declarationMap": false,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "resolveJsonModule": true,
      "sourceMap": false,
      "strict": true,
      "types": []
    },
    "include": ["src/index.ts", "src/**/*.ts", "src/**/*.d.ts"],
    "exclude": ["node_modules"]
  }
  