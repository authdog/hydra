{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=@playground/*",
    "dev_docs": "turbo run dev --filter=@authdog/hydra-docs",
    "ship": "turbo run deploy --parallel --filter=@playground/*",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo test --filter=@authdog/* --filter=!@playground/* --concurrency=${TURBO_CONCURRENCY:-2}"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "eslint": "^8.48.0",
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "tsup": "^7.2.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "name": "hydra",
  "dependencies": {
    "@graphql-tools/schema": "^10.0.0",
    "graphql": "^16.8.1",
    "graphql-yoga": "^5.0.0",
    "itty-durable": "^2.1.0",
    "node-fetch": "2.7.0",
    "react-icons": "^4.12.0"
  }
}
